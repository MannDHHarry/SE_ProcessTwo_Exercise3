@page
@model Exercise3.Pages.Items.CreateModel
@{
}
<h2>Add New Item</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Item.ItemName">Item Name</label>
        <input asp-for="Item.ItemName" class="form-control" />
        <span asp-validation-for="Item.ItemName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Item.Size">Size</label>
        <input asp-for="Item.Size" class="form-control" />
        <span asp-validation-for="Item.Size" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Item</button>
    <a asp-page="/Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}