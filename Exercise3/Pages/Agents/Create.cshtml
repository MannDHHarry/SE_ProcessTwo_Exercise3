@page
@model Exercise3.Pages.Agents.CreateModel
@{
}
<h2>Add New Agent</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Agent.AgentName">Agent Name</label>
        <input asp-for="Agent.AgentName" class="form-control" />
        <span asp-validation-for="Agent.AgentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Agent.Address">Address</label>
        <input asp-for="Agent.Address" class="form-control" />
        <span asp-validation-for="Agent.Address" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Agent</button>
    <a asp-page="/Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}